CREATE TABLE todos(
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    period_unit INTEGER NOT NULL,
    period_value Integer NOT NULL,
    timestamp INTEGER NOT NULL
);

selectAll:
SELECT * FROM todos;

insertTodo:
INSERT INTO todos VALUES (?, ?, ?, ?, ?);

updateTodoById:
UPDATE todos SET
    title = ?,
    period_unit = ?,
    period_value = ?,
    timestamp = ?
WHERE id = ?;